{% extends 'IntrawayAvatarBundle::base.html.twig' %}

{% block title %}
    Home!!
{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('bundles/intrawayavatar/jquery-upload/css/uploadfile.css') }}" rel="stylesheet"/>
    <link href="{{ asset('bundles/intrawayavatar/font-awesome/css/font-awesome.min.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="card">
            <div class="card-header">Avatars</div>
            <div class="card-block">
                <div id="accordion">
                    <h3>Upload Avatar</h3>
                    <div>
                        <div><label> Upload Avatar:</label></div>
                        <div id="fileuploader">Load</div>
                        <div id="respuesta">
                        </div>
                    </div>
                    <h3 id="selectAvatar">Select Avatar</h3>
                    <div>
                        <div class="row">
                            <div class="col col-lg-3 col-sm-3 col-md-3 col-xs-3 card">
                                <div class="card-header">
                                    Your Avatar
                                </div>
                                <div id="div_imgUsr" class="card-block">

                                </div>
                            </div>
                            <div class="col col-lg-9 col-sm-9 col-md-9 col-xs-9  card">
                                <div class="card-header">
                                    Enter your Email
                                </div>
                                <div class="card-block">
                                    <input id="inpt_email" name="inpt_email" type="email" class="form-control" placeholder="Email" required/>
                                </div>
                                <div class="card-footer">
                                    <input type="hidden" value="" id="inpt_idAvatar" name="inpt_idAvatar" />
                                    <button id="btn_search" type="button" class="btn btn-primary">Search</button>
                                    <button id="btn_save" type="button" class="btn btn-success">Save</button>
                                    <button id="btn_clear" type="button" class="btn btn-info">Clear</button>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col col-lg-12 col-sm-12 col-md-12 col-xs-12 card">
                                <div class="card-header">
                                    Select your Avatar
                                </div>
                                <div id="div_gridAvatar" class="card-block">
                                </div>
                                <div class="card-footer">

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div id="capaLoad" style="z-index: 20;
                     position: absolute; 
                     left: 40%;
                     top: 40%;">
                    <img src="{{ asset('bundles/intrawayavatar/images/box.gif') }}" alt="Cargando"/>
                </div>
                <div id="dialogo" title="Response"></div>
                <div id="confirm" style="display: none;" title="Delete Avatar">
                    <p><span class="ui-icon ui-icon-alert" style="float:left; margin:12px 12px 20px 0;"></span>This item will be permanently deleted and cannot be recovered. Are you sure?</p>
                </div>
            </div>
        </div>

    </div>
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('bundles/intrawayavatar/js/jquery.md5.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/intrawayavatar/jquery-upload/js/jquery.uploadfile.min.js') }}" type="text/javascript"></script>
    <script src="{{ asset('bundles/intrawayavatar/js/avatar.js') }}" type="text/javascript"></script>
{% endblock %}